/* pages/set/set.wxss */

/* 搜索框 */

.search image {
  width: 100%;
  height: 70rpx;
}

/* 搜索框 end */

/* banner */

.banner {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner image {
  width: 100%;
  height: 244rpx;
}

.banner navigator {
  position: absolute;
  padding: 16rpx 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

/* 分类按钮 */

.sortbtn navigator {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 80rpx;
  border: 1rpx solid #f2f2f2;
}

.sortbtn navigator text {
  padding: 0 10rpx;
  font-size: 24rpx;
  color: #333;
}

.sortbtn navigator .iconfont {
  font-size: 28rpx;
  font-weight: bold;
}

/* 产品列表 */

.productlist {
  flex-flow: row wrap;
  padding-bottom: 110rpx;
}

.productlist .intro {
  justify-content: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 30rpx;
  font-style: italic;
}

.productlist .porductmsg {
  padding: 30rpx 30rpx 0;
  width: 50%;
}

.productlist .porductmsg navigator {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  padding: 0 0 10rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
  background-color: #e6e6e6;
}

.productlist .porductmsg image {
  margin: 24rpx 0;
  width: 180rpx;
  height: 220rpx;
}

.productlist .porductmsg .name {
  max-width: 230rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.productlist .porductmsg .price {
  max-width: 230rpx;
  font-size: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 导航栏 */

navigation {
  position: fixed;
  bottom: 0;
  left: 0;
}

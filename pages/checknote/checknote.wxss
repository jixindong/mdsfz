/* pages/checknote/checknote.wxss */

.box {
  padding: 0 20rpx;
}

/* 查看笔记商品 */

.product {
  flex-flow: row nowrap;
  padding: 30rpx 0 20rpx;
}

.product .img {
  width: 310rpx;
  height: 230rpx;
  border: 2rpx solid #666;
}

.product .txt {
  flex-flow: column nowrap;
}

.product .txt text {
  padding: 10rpx 0 10rpx 20rpx;
  font-size: 26rpx;
  color: #999;
}

.product .txt .title {
  padding: 0 0 0 20rpx;
  max-width: 420rpx;
  color: #404040;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 笔记 */

.notebox {
  flex-flow: column nowrap;
  margin: 20rpx 0 200rpx;
  border: 1rpx solid #ccc;
}

.notebox .note {
  padding: 20rpx;
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #404040;
}

/* 标签 */

.notebox .tag {
  padding: 20rpx;
}

.notebox .tag .tag-normal {
  margin: 0 10rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #eee;
  background-color: #333;
  border-radius: 20rpx;
}

/* .notebox .tag .tag-add {
  font-size: 34rpx;
} */

/* 按钮 */

.notebtnbox {
  flex-flow: column nowrap;
  padding: 0 20rpx;
}

.notebtnbox .notebtn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0;
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  color: #ddd;
  background-color: #1a1a1a;
  border: 4rpx solid #1a1a1a;
  border-radius: 4rpx;
}

.notebtnbox .notebtn2 {
  color: #1a1a1a;
  background-color: #fff;
}

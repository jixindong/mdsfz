/* pages/order/order.wxss */

.box {
  flex-flow: row nowrap;
  padding-bottom: 210rpx;
}

/* 大图 */

.bigimg {
  position: relative;
  flex: 1;
  flex-flow: column nowrap;
}

.bigimg .logo {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 180rpx;
  height: 150rpx;
  z-index: 1;
}
.bigimg .qrcode{
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  width: 120rpx;
  height: 120rpx;
}
.bigimg .companyEnter{
  width: 100%;
  height: 400rpx;
}
.bigimg .companyIntro{
  flex: 1;
  flex-flow: column nowrap;
  padding: 20rpx 30rpx;
  background-color: #F0FFFF;
}
.bigimg .companyIntro text{
  padding: 10rpx 0;
  color: #333;
  font-size: 28rpx;
  text-indent: 20rpx;
}
.bigimg .companyIntro .title{
  padding: 10rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

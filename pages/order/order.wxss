/* 按钮 */

.orderbtnbox {
  flex-flow: row nowrap;
  position: fixed;
  bottom: 96rpx;
  left: 0;
}

.orderbtnbox .orderbtn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  width: 33.33%;
  background-color: #c9c9c9;
}

.orderbtnbox .orderbtn2 {
  color: #fbfbfb;
  background-color: #979797;
}

.orderbtnbox .orderbtn3 {
  color: #fff;
  background-color: #1a1a1a;
}

.orderbtnbox .orderbtn text {
  padding: 0 0 0 10rpx;
  font-size: 28rpx;
}

/* 导航栏 */

navigation {
  position: fixed;
  bottom: 0;
  left: 0;
}

}

.footbtnbox .btnactive {
  color: #ffaa6a;
}

.footbtnbox .footbtn navigator {
  padding: 30rpx 0;
  width: 100%;
  text-align: center;
}

.footbtnbox .footbtn navigator text {
  padding: 0 10rpx;
  font-size: 32rpx;
}

/* 底部按钮 end */

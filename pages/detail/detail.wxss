/* 面料图片 */

.liningTitle {
  padding: 10rpx 50rpx;
  font-size: 28rpx;
}

.lining {
  flex-flow: row wrap;
  padding: 10rpx 40rpx;
}

.lining image {
  margin: 10rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

/* 面料图片 end */

/* 色谱&标志 */

.productTag {
  flex-flow: column nowrap;
  padding: 20rpx 60rpx;
}

.productTag .title {
  font-size: 28rpx;
}

.productTag .imgs {
  flex-flow: row wrap;
  padding: 20rpx 0;
}

.productTag .imgs image {
  margin: 8rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

/* 色谱&标志 end */

/* 3D图片 */

.holograph {
  flex-flow: column nowrap;
  padding: 0 60rpx;
}

.holograph text {
  font-size: 28rpx;
}

.holograph navigator {
  margin: 20rpx 0;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.holograph navigator image {
  width: 100%;
  height: 100%;
}

/* 3D图片 end */

/* 相关产品 */

.productlistTitle {
  justify-content: center;
  font-size: 30rpx;
}

.productlist {
  flex-flow: row wrap;
  padding-bottom: 110rpx;
}

.productlist .porductmsg {
  padding: 30rpx 30rpx 0;
  width: 50%;
}

.productlist .porductmsg navigator {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  padding: 0 0 10rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
  background-color: #e6e6e6;
}

.productlist .porductmsg image {
  margin: 24rpx 0;
  width: 180rpx;
  height: 220rpx;
}

.productlist .porductmsg .name {
  max-width: 230rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.productlist .porductmsg .price {
  max-width: 230rpx;
  font-size: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 相关产品 end */


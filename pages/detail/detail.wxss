/* 分享 */

/* 分享按钮 */

.shareBtn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 1;
}

.shareBtn image {
  width: 100%;
  height: 100%;
}

/* 分享按钮 end */

/* 分享盒子 */

.shareBox {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.shareBox .shareContainer {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 遮罩层 */

.shareBox .shareContainer .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

/* 分享按钮盒子 */

.shareBox .shareContainer .shareFunction {
  position: fixed;
  bottom: 0;
  left: 0;
  flex-flow: row wrap;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}

.shareBox .shareContainer .shareFunction .shareNow {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 50%;
  color: #333;
  font-size: 26rpx;
  background-color: #fff;
}

.shareBox .shareContainer .shareFunction .shareNow::after {
  border: 0;
}

.shareBox .shareContainer .shareFunction .shareNow image {
  margin-bottom: 10rpx;
  width: 60rpx;
  height: 60rpx;
}

.shareBox .shareContainer .shareFunction .shareCancel {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  color: #333;
  font-size: 26rpx;
  border-top: 2rpx solid #eee;
}

/* 生成分享图 */

.shareImgBox {
  position: fixed;
  top: 6%;
  left: 50%;
  margin-left: -125px;
  width: 250px;
  height: 68%;
}

.shareImgBox .sahreImg {
  height: 100%;
}

.shareImgBox .sahreImg canvas {
  width: 100%;
  height: 100%;
}

.shareImgBox  .saveImg {
  position: absolute;
  bottom: -180rpx;
  left: 30%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  width: 40%;
  color: #fff;
  font-size: 26rpx;
  letter-spacing: 4rpx;
  background-color: transparent;
}

.shareImgBox  .saveImg::after {
  border: 0;
}

.shareImgBox  .saveImg image {
  width: 90rpx;
  height: 90rpx;
}

/* 分享盒子 end */

/* 分享 end */


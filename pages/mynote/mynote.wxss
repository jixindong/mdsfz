/* pages/mynote/mynote.wxss */

.box {
  padding: 0 30rpx 100rpx;
}

/* 我的笔记 */

.note {
  flex-flow: column nowrap;
  padding: 30rpx 0;
  font-size: 26rpx;
  border-bottom: 2rpx solid #eee;
}

.note .txt {
  padding: 0 10rpx 30rpx;
  color: #333;
}

.note .note-bottom {
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.note .note-bottom .delete {
  color: #333;
}

.note .note-bottom .delete text {
  padding: 0 10rpx;
  font-size: 26rpx;
}

/* 我的笔记 end */

